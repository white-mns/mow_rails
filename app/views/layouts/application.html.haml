!!! s
%html
  %head
    %title 霧戦争データ小屋
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          = link_to "霧戦争5期データ小屋", root_path, :class => "navbar-brand"
        .navbar-collapse.collapse#navbar-main
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle#themes{ :data => {:toggle =>"dropdown"}, :href => "#"}
                個人データ
                %span.caret
              %ul.dropdown-menu{:aria-labelledby => "themes"}
                %li.divider

    .container
      .row
        .col-md-12
          = yield
      
      %footer
        %p 制作#{link_to "@white_mns", "http://twitter.com/white_mns"}
        %p ソースコード [#{link_to "解析部分", "https://github.com/white-mns/mow_parse"}] [#{link_to "表示部分", "https://github.com/white-mns/mow_rails"}]
      = render 'layouts/analytics'
