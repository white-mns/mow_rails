- @page_title = "一覧"
%h1= @page_title

.card.desc
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td  
        %td= f.label :result_no_form, '更新回'
        %td.formNum{colspan: "3"}= text_field_tag :result_no_form, @result_no_form
      %tr
        %td  
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td  
        %td= f.label :p_name_form, 'キャラクター名'
        %td.formText= text_field_tag :p_name_form, @p_name_form
      %tr
        %td  
        %td= f.label :result_no_form, 'Result no'
        %td.formNum= text_field_tag :result_no_form, @result_no_form
      %tr
        %td  
        %td= f.label :generate_no_form, 'Generate no'
        %td.formNum= text_field_tag :generate_no_form, @generate_no_form
      %tr
        %td  
        %td= f.label :block_no_form, 'Block no'
        %td.formNum= text_field_tag :block_no_form, @block_no_form
      %tr
        %td  
        %td= f.label :e_no_form, 'E no'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td  
        %td= f.label :turn_form, 'Turn'
        %td.formNum= text_field_tag :turn_form, @turn_form
      %tr
        %td  
        %td= f.label :act_form, 'Act'
        %td.formNum= text_field_tag :act_form, @act_form
      %tr
        %td  
        %td= f.label :data_type_form, 'Data type'
        %td.formNum= text_field_tag :data_type_form, @data_type_form
      %tr
        %td  
        %td= f.label :value_form, 'Value'
        %td.formNum= text_field_tag :value_form, @value_form
      %tr
        %td  
        %td= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@transitions)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :result_no, 'Result no', default_order: :desc)
      %th= sort_link(@search, :generate_no, 'Generate no', default_order: :desc)
      %th= sort_link(@search, :block_no, 'Block no', default_order: :desc)
      %th= sort_link(@search, :e_no, 'E no', default_order: :desc)
      %th= sort_link(@search, :turn, 'Turn', default_order: :desc)
      %th= sort_link(@search, :act, 'Act', default_order: :desc)
      %th= sort_link(@search, :data_type, 'Data type', default_order: :desc)
      %th= sort_link(@search, :value, 'Value', default_order: :desc)
      %th{colspan: "2"} 結果リンク
  %tbody
    - @transitions.each do |transition|
      %tr
        %td= transition.result_no
        %td= p_name_text(transition.e_no, transition.p_name)
        %td= transition.result_no
        %td= transition.generate_no
        %td= transition.block_no
        %td= transition.e_no
        %td= transition.turn
        %td= transition.act
        %td= transition.data_type
        %td= transition.value
        %td= character_link(transition.e_no)
        %td= character_old_link(@last_result, transition.e_no, transition.result_no, transition.generate_no)
= paginate(@transitions)
