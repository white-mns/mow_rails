        %td= f.label :unique_1_form, '特殊2'
        %td.formNum= text_field_tag :unique_2_form, @unique_2_form
      %tr
        %td.indent
        %td= f.label :turning_speed_form, '旋回速度'
        %td.formNum{colspan: "3"}= text_field_tag :turning_speed_form, @turning_speed_form
      %tr
        %td.indent
        %td= f.label :guard_elemental_form, '防御属性'
        %td.formText= text_field_tag :guard_elemental_form, @guard_elemental_form
        %td= f.label :guard_value_form, '防御値'
        %td.formNum= text_field_tag :guard_value_form, @guard_value_form
      %tr
        %td.indent
        %td= f.label :value_form, '金額'
        %td.formNum= text_field_tag :value_form, @value_form
        %td= f.label :ammunition_cost_form, '弾薬費'
        %td.formNum= text_field_tag :ammunition_cost_form, @ammunition_cost_form
      %tr
        %td.indent
        %td= f.label :weight_form, '重量'
        %td.formNum{colspan: "3"}= text_field_tag :weight_form, @weight_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :show_detail_3, @show_detail_3
          - act_icon(false)
          = label_tag :show_detail_1, '　詳細その2を表示する', class: "act_desc"
          = label_tag :show_detail_1, '　詳細その2を非表示にする', class: "act_desc closed"
          %div.act_desc 　精度、貯水量、噴霧量、弾数、積載量、武器属性、異常追加
    %tbody.closed
      %tr
        %td.indent
        %td= f.label :precision_form, '精度'
        %td.formNum{colspan: "3"}= text_field_tag :precision_form, @precision_form
      %tr
        %td.indent
        %td= f.label :punding_form, '貯水量'
