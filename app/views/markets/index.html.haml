%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th.sep= sort_link(@search, :market_no, 'No', default_order: :desc)
      %th= sort_link(@search, :name, 'パーツ名', default_order: :desc)
      - if @show_detail_1 == "1"
        %th.sep= sort_link(@search, :kind, '種別', default_order: :desc)
        %th= sort_link(@search, :orig_name, '詳細', default_order: :desc)
        %th.sep= sort_link(@search, :fuka_1, '付加A', default_order: :desc)
        %th= sort_link(@search, :fuka_2, '付加B', default_order: :desc)
        %th= sort_link(@search, :strength, '強度', default_order: :desc)
      - if @show_detail_2 == "1"
        %th.sep= sort_link(@search, :ap, 'AP', default_order: :desc)
        %th= sort_link(@search, :spending_en, '消費EN', default_order: :desc)
        %th= sort_link(@search, :unique_1, '特殊1', default_order: :desc)
        %th= sort_link(@search, :unique_2, '特殊2', default_order: :desc)
        %th= sort_link(@search, :turning_speed, '旋回', default_order: :desc)
        %th= sort_link(@search, :guard_elemental, '防御属性', default_order: :desc)
        %th= sort_link(@search, :guard_value, '防御値', default_order: :desc)
        %th= sort_link(@search, :value, '金額', default_order: :desc)
        %th= sort_link(@search, :ammunition_cost, '弾薬費', default_order: :desc)
        %th= sort_link(@search, :weight, '重量', default_order: :desc)
      - if @show_detail_3 == "1"
        %th.sep= sort_link(@search, :precision, '精度', default_order: :desc)
        %th= sort_link(@search, :punding, '貯水', default_order: :desc)
        %th= sort_link(@search, :aerosol, '噴霧', default_order: :desc)
        %th= sort_link(@search, :bullet, '弾数', default_order: :desc)
        %th= sort_link(@search, :loading, '積載', default_order: :desc)
        %th= sort_link(@search, :weapon_element, '武器属性', default_order: :desc)
        %th= sort_link(@search, :add_abnormity, '異常追加', default_order: :desc)
        %th= sort_link(@search, :charge, '資産投入', default_order: :desc)
      - if @show_detail_4 == "1"
        %th.sep= sort_link(@search, :gunshot, '射撃', default_order: :desc)
        %th= sort_link(@search, :struggle, '格闘', default_order: :desc)
        %th= sort_link(@search, :reaction, '反応', default_order: :desc)
        %th= sort_link(@search, :control, '制御', default_order: :desc)
        %th= sort_link(@search, :preparation, '整備', default_order: :desc)
        %th= sort_link(@search, :fitly, '適性', default_order: :desc)
      %th.sep{colspan:"2"}
        結果リンク
  %tbody
    - @markets.each do |market|
      %tr
        %td= market.result_no
        %td= p_name_text(market.e_no, market.p_name)
        %td.sep= market.market_no
        %td= market.name
        - if @show_detail_1 == "1"
          %td.sep= market.kind_name.name if market.kind
          %td= market.orig_name_name.name if market.orig_name_name
          %td.sep= market.fuka_1_name.name if market.fuka_1_name
          %td= market.fuka_2_name.name if market.fuka_2_name
          %td= market.strength
        - if @show_detail_2 == "1"
          %td.sep= market.ap
          %td= market.spending_en
          %td= market.unique_1
          %td= market.unique_2
          %td= market.turning_speed
          %td{style: "#{ elemental_border(market.guard_elemental_name) }" }= market.guard_elemental_name.name if market.guard_elemental_name
          %td= market.guard_value
          %td= market.value
          %td= market.ammunition_cost
          %td= market.weight
        - if @show_detail_3 == "1"
          %td.sep= market.precision
          %td= market.punding
          %td= market.aerosol
          %td= market.bullet
          %td= market.loading
          %td= market.weapon_element_name.name if market.weapon_element_name
          %td= market.add_abnormity
          %td= market.charge
        - if @show_detail_4 == "1"
          %td.sep= market.gunshot
          %td= market.struggle
          %td= market.reaction
          %td= market.control
          %td= market.preparation
          %td= market.fitly
        %td.sep= character_link(market.e_no) if market.e_no > 0
        %td= character_old_link(@last_result, market.e_no, market.result_no, market.generate_no) if market.e_no > 0
= paginate(@markets)
