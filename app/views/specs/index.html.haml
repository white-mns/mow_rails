- @page_title = "機体データ一覧"
%h1= @page_title

.card.desc
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
        %td
        %td= f.label :result_no_form, '更新回'
        %td.formNum{colspan: "3"}= text_field_tag :result_no_form, @result_no_form
      %tr
        %td
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
        %td= f.label :p_name_form, 'キャラクター名'
        %td.formText= text_field_tag :p_name_form, @p_name_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :base_first, @base_first
          = hidden_field_tag :show_detail_1, @show_detail_1
          - act_icon(false)
          = label_tag :show_detail_1, '　基礎情報その1を表示する', class: "act_desc"
          = label_tag :show_detail_1, '　基礎情報その1を非表示にする', class: "act_desc closed"
          %div.act_desc 　AP、EN、EN回復量
    %tbody
      %tr
        %td
        %td= f.label :ap_form, 'AP'
        %td.formNum{colspan: "3"}= text_field_tag :ap_form, @ap_form
      %tr
        %td
        %td= f.label :en_form, 'EN'
        %td.formNum= text_field_tag :en_form, @en_form
        %td= f.label :en_recovery_form, 'EN回復量'
        %td.formNum= text_field_tag :en_recovery_form, @en_recovery_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :base_first, @base_first
          = hidden_field_tag :show_detail_2, @show_detail_2
          - act_icon(false)
          = label_tag :show_detail_2, '　基礎情報その2を表示する', class: "act_desc"
          = label_tag :show_detail_2, '　基礎情報その2を非表示にする', class: "act_desc closed"
          %div.act_desc 　機動力、総重量、旋回速度、跳躍力、最大火力、索敵範囲、命中精度、貯水量、噴霧量、積載量、最大積載量
    %tbody
      %tr
        %td
        %td= f.label :movement_form, '機動力'
        %td.formNum= text_field_tag :movement_form, @movement_form
        %td= f.label :weight_form, '総重量'
        %td.formNum= text_field_tag :weight_form, @weight_form
      %tr
        %td
        %td= f.label :turning_speed_form, '旋回速度'
        %td.formNum= text_field_tag :turning_speed_form, @turning_speed_form
        %td= f.label :jump_form, '跳躍力'
        %td.formNum= text_field_tag :jump_form, @jump_form
      %tr
        %td
        %td= f.label :max_power_form, '最大火力'
        %td.formNum{colspan: "3"}= text_field_tag :max_power_form, @max_power_form
      %tr
        %td
        %td= f.label :search_form, '索敵範囲'
        %td.formNum= text_field_tag :search_form, @search_form
        %td= f.label :precision_form, '命中精度'
        %td.formNum= text_field_tag :precision_form, @precision_form
      %tr
        %td
        %td= f.label :punding_form, '貯水量'
        %td.formNum= text_field_tag :punding_form, @punding_form
        %td= f.label :aerosol_form, '噴霧量'
        %td.formNum= text_field_tag :aerosol_form, @aerosol_form
      %tr
        %td
        %td= f.label :loading_form, '積載量'
        %td.formNum= text_field_tag :loading_form, @loading_form
        %td= f.label :max_loading_form, '最大積載量'
        %td.formNum= text_field_tag :max_loading_form, @max_loading_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :show_detail_3, @show_detail_3
          - act_icon(false)
          = label_tag :show_detail_3, '　防御値を表示する', class: "act_desc"
          = label_tag :show_detail_3, '　防御値を非表示にする', class: "act_desc closed"
          %div.act_desc 　物理防御、霊障防御、粒子防御、火炎防御、電子防御
    %tbody.closed
      %tr
        %td
        %td= f.label :pysics_form, '物理防御'
        %td.formNum= text_field_tag :pysics_form, @pysics_form
        %td= f.label :spirit_form, '霊障防御'
        %td.formNum= text_field_tag :spirit_form, @spirit_form
      %tr
        %td
        %td= f.label :particle_form, '粒子防御'
        %td.formNum= text_field_tag :particle_form, @particle_form
        %td= f.label :flame_form, '火炎防御'
        %td.formNum= text_field_tag :flame_form, @flame_form
      %tr
        %td
        %td= f.label :electric_form, '電子防御'
        %td.formNum{colspan: "3"}= text_field_tag :electric_form, @electric_form
    %tbody.tbody_toggle.pointer
      %tr
        %td{colspan: "5"}
          = hidden_field_tag :show_detail_5, @show_detail_5
          - act_icon(false)
          = label_tag :show_detail_5, '　機体状況を表示する', class: "act_desc"
          = label_tag :show_detail_5, '　機体状況を非表示にする', class: "act_desc closed"
    %tbody.closed
      %tr
      %tr
        %td
        %td= f.label :condition_text_form, '機体状況'
        %td.formText{colspan: "3"}= text_field_tag :condition_text_form, @condition_text_form
    %tbody
      %tr
        %td
        %td= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@specs)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      - if @show_detail_1 == "1"
        %th= sort_link(@search, :ap, 'AP', default_order: :desc)
        %th= sort_link(@search, :en, 'EN', default_order: :desc)
        %th= sort_link(@search, :en_recovery, 'EN回復', default_order: :desc)
      - if @show_detail_2 == "1"
        %th= sort_link(@search, :movement, '機動', default_order: :desc)
        %th= sort_link(@search, :weight, '総重量', default_order: :desc)
        %th= sort_link(@search, :turning_speed, '旋回', default_order: :desc)
        %th= sort_link(@search, :jump, '跳躍', default_order: :desc)
        %th= sort_link(@search, :max_power, '最大火力', default_order: :desc)
        %th= sort_link(@search, :search, '索敵', default_order: :desc)
        %th= sort_link(@search, :precision, '命中', default_order: :desc)
        %th= sort_link(@search, :punding, '貯水', default_order: :desc)
        %th= sort_link(@search, :aerosol, '噴霧', default_order: :desc)
        %th= sort_link(@search, :loading, '積載', default_order: :desc)
        %th= sort_link(@search, :max_loading, '最大積載', default_order: :desc)
      - if @show_detail_3 == "1"
        %th{style: "border-bottom: 0.3em solid #ccc;"}= sort_link(@search, :pysics, '物理', default_order: :desc)
        %th{style: "border-bottom: 0.3em solid #c4c;"}= sort_link(@search, :spirit, '霊障', default_order: :desc)
        %th{style: "border-bottom: 0.3em solid #4cc;"}= sort_link(@search, :particle, '粒子', default_order: :desc)
        %th{style: "border-bottom: 0.3em solid #c44;"}= sort_link(@search, :flame, '火炎', default_order: :desc)
        %th{style: "border-bottom: 0.3em solid #ee8;"}= sort_link(@search, :electric, '電子', default_order: :desc)
      - if @show_detail_5 == "1"
        %th= sort_link(@search, :condition_all_text_condition_text, '機体状況', default_order: :desc)
      %th{colspan: "2"}
        結果リンク
  %tbody
    - @specs.each do |spec|
      %tr
        %td= spec.result_no
        %td= p_name_text(spec.e_no, spec.p_name)
        - if @show_detail_1 == "1"
          %td= spec.ap
          %td= spec.en
          %td= spec.en_recovery
        - if @show_detail_2 == "1"
          %td= spec.movement
          %td= spec.weight
          %td= spec.turning_speed
          %td= spec.jump
          %td= spec.max_power
          %td= spec.search
          %td= spec.precision
          %td= spec.punding
          %td= spec.aerosol
          %td= spec.loading
          %td= spec.max_loading
        - if @show_detail_3 == "1"
          %td= spec.pysics
          %td= spec.spirit
          %td= spec.particle
          %td= spec.flame
          %td= spec.electric
        - if @show_detail_5 == "1"
          %td= spec.condition_all_text.condition_text if spec.condition_all_text
        %td= character_link(spec.e_no)
        %td= character_old_link(@last_result, spec.e_no, spec.result_no, spec.generate_no)
= paginate(@specs)
