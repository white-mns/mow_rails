%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :result_no, 'Result no', default_order: :desc)
      %th= sort_link(@search, :generate_no, 'Generate no', default_order: :desc)
      %th= sort_link(@search, :e_no, 'E no', default_order: :desc)
      %th= sort_link(@search, :condition_text, 'Condition text', default_order: :desc)
      %th{:colspan =>"2"}
        結果リンク
  %tbody
    - @condition_all_texts.each do |condition_all_text|
      %tr
        %td= condition_all_text.result_no
        %td= condition_all_text.p_name.name.html_safe + "(" + sprintf("%d",condition_all_text.e_no) + ")"
        %td= condition_all_text.result_no
        %td= condition_all_text.generate_no
        %td= condition_all_text.e_no
        %td= condition_all_text.condition_text
        %td= character_link(condition_all_text.e_no)
        %td= character_old_link(@last_result, condition_all_text.e_no, condition_all_text.result_no, condition_all_text.generate_no)
= paginate(@condition_all_texts)
